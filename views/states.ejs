<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>State wise stats</title>
  </head>
  <body style="background:black;">
    <%- include('navbar.ejs'); %>
    <table class="table table-dark table-hover my-3">
            <thead> 
                <tr class="bg-warning">
                  <th scope="col">SNo.</th>
                  <th scope="col">States</th>
                  <th scope="col">Confirmed</th>
                  <th scope="col">Active</th>
                  <th scope="col">Recovered</th>
                  <th scope="col">Deceased</th>
                </tr>
            </thead>
            <% for(var i=0; i < mm.length-1; i++) { %>
                 <%  if(  mm[i].active >1000  ){   %>
                  <tr class="table-primary" " >
                    <td  class="bg-danger"><%= i+1  %></td>
                     <td class="bg-danger"><%= mm[i].state_name %></td>
                     <td class="bg-danger"><%= mm[i].positive %></td>
                     <td class="bg-danger"><%= mm[i].active %></td>
                     <td class="bg-danger"><%= mm[i].cured %></td>
                     <td class="bg-danger"><%= mm[i].death %></td>
                   </tr>

                  <% } else {  %>
                  
               <tr>
                <td class="bg-success"><%= i+1  %></td>
                 <td class="bg-success"><%= mm[i].state_name %></td>
                 <td class="bg-success"><%= mm[i].positive %></td>
                 <td class="bg-success"><%= mm[i].active %></td>
                 <td class="bg-success"><%= mm[i].cured %></td>
                 <td class="bg-success"><%= mm[i].death %></td>
               </tr>
             <% } %>
              
            <% } %>
            <tr " >
              <td></td>
              <td>Total</td>
              <td><%= mm[mm.length-1].positive %></td>
              <td><%= mm[mm.length-1].active %></td>
              <td><%= mm[mm.length-1].cured %></td>
              <td><%= mm[mm.length-1].death %></td>
            </tr>
            
        </table>
        <style>
          thead th {
            font-size: 1.6em;
         padding-bottom: auto;
      height: 75px;
          }
          .data101{
            height: 400px;
            width: 100%;
            align-self: center;
          }
          .container {
      position: relative;
      font-size: 50px;
      text-align: center;
      color: rgb(206, 11, 11);
    }


    .centered {
      position: relative;
      top: 70%;
      left: 30%;
     
      
    }
        </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
  <%- include('footer.ejs'); %>
  </body>
</html>